#contenthost {
    * {
        box-sizing: border-box;
    }

    height = 100px;

    #stream-list {
        > div {
            display: flex;
            justify-content: center;
        }

        .streamer {
            position: relative;
            width: 400px;
            background: rgba(0, 0, 0, 0.3);
            margin: 0 auto;

            .iframe {
                width: 100%;
                height: 100%;
                min-height: 300px;
            }

            .username {
                position: absolute;
                width: 100%;
                left: 0;
                right: 0;
                bottom: 0;
                display: block;
                background: rgba(0, 0, 0, 0.3);
                padding: 10px;
                font-size: 13px;
                font-family: sans-serif;
                font-weight: bold;

                span {
                    display: block;
                    text-align: left;
                    color: #fff;
                }
            }
        }
    }
}