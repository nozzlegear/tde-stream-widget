{
    "compilerOptions": {
        "module": "commonjs",
        "jsx": "react",
        "target": "es5",
        "lib": ["es2015", "dom"],
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "baseUrl": "./",
        "paths": {
            "*": ["typings/*"]
        }
    },
    "exclude": ["node_modules"]
}
